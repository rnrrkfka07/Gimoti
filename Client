using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Threading;
using System.Net;
using System.Net.Sockets;

namespace Client
{
    class Program
    {
        static void Main(string[] args)
        {
            //끝점 생성 (서버 IP 및 포트)
            IPEndPoint endPoint = new IPEndPoint(IPAddress.Parse("172.16.11.109"), 8211);// 아까 서버IP 및 포트랑 같은거 적으셈
            //소켓 생성
            Socket socket = new Socket(endPoint.AddressFamily, SocketType.Stream, ProtocolType.Tcp);

            //소켓을 끝점에 연결
            socket.Connect(endPoint);
            Console.WriteLine("Connect...");
            byte[] recvData = new byte[1024];
            int recvBytes;
            Thread receive = new Thread(new ThreadStart(listen));
            receive.Start();
            while (true)
            {
                String str = Console.ReadLine(); // 콘솔에서 문자열을 입력
                byte[] sendData = Encoding.UTF8.GetBytes(str); // 입력받은 문자열을 byte로 변환
                socket.Send(sendData); // byte로 변환된 문자열을 서버에 전송
                if (str == "exit")
                {
                    break;
                }
                
            }
            void listen()
            {
                while (true)
                {
                    recvBytes = socket.Receive(recvData);
                    String str = Encoding.UTF8.GetString(recvData, 0, recvBytes);
                    Console.WriteLine(str);
                }
            }
            socket.Close();
        }
    }
}
